<div class="container">
  <div class="row mt-4">
    <div class="mt-3 mx-auto kokuban-s3">
      <h2 class="col-12 text-white">ログイン</h2>
      <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>

        <div class="field row form-group mt-3">
          <%= f.label :メールアドレス, class: "col-12" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field row form-group">
          <%= f.label :パスワード, class: "col-12" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="row">
          <%= f.submit "ログイン", class: "text-white mt-4" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
