<div class="container">
  <div class="row">
    <h3 class="mt-5 col-12"><strong>ユーザー情報編集</strong></h3>
    <%= form_with model: @customer, url: public_customer_path, local: true do |f| %>

      <div class="field row form-group mt-3">
        <%= f.label :プロフィール画像, class: "col-12" %>
        <%= f.attachment_field :profile_image %>
      </div>

      <div class="row form-group">
        <%= f.label :ユーザー名, class: "col-12" %>
        <%= f.text_field :name, class:"form-control" %>
      </div>

      <div class="field form-group row">
        <%= f.label :自己紹介, class: "col-12" %><br />
        <%= f.text_area :introduction, autofocus: true %>
      </div>

      <div class="field form-group row">
        <%= f.label :メールアドレス, class: "col-12" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="row">
        <%= f.submit "編集内容を保存", class:"btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>