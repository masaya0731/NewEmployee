<% visiter = notification.visitor %>
<% post = notification.post %>

<div class="user-view clearfix border-bottom mt-3 pb-3">
  <%= link_to public_customer_path(notification.visitor) do %>
    <%= attachment_image_tag visiter, :profile_image, size: "50x50", format: "jpeg", fallback: "no_image.jpg", class:"profile-img-circle customer_plofile_image" %>
  <% end %>
  <%= notification_form(notification) %><span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)}前)" %></span>
  <br>
  <% if !@comment.nil? %>
    <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @comment %></p>
  <% end %>
</div>