<div class="container">
  <div class="text-success mt-1"><strong><%= flash[:success] %></strong></div>
  <div class="row mt-5">
    <div class="kokuban-s8 col-12">
      <h3 class="col-12 text-white">
        投稿詳細
      </h3>
      <%= link_to public_customer_path(@customer.id) do %>
        <%= attachment_image_tag @customer, :profile_image, size: "80x80", fallback: "no_image.jpg", class: "mt-3 customer_plofile_image offset-1" %><br>
        <div class="offset-1 mt-1 text-white", style="text-decoration: none;">
          <%= @customer.name %>
        </div>
      <% end %>
      <h4 class="text-white offset-1 col-11 mt-3">
        タイトル
      </h4>
      <div class="mt-3 offset-1 col-11">
        <%= @post.title %>
      </div>
      <h4 class="text-white offset-1 col-11 mt-3">
        投稿内容
      </h4>
      <div class="mt-3 offset-1 col-11">
        <%= @post.body %>
      </div>
      <% if @post.customer == current_customer %>
        <%= link_to "投稿内容を編集する", edit_public_post_path(@post), class: "font-weight-bold text-success btn btn-light mt-3 offset-1", style: "text-decoration: none;"%>
        <%= link_to "投稿を削除する", public_post_path(@post), method: :delete, data: { confirm: '投稿を削除しますか？' }, class: "font-weight-bold text-danger btn btn-light mt-3 offset-1", style: "text-decoration: none;" %>
      <% end %>
    </div>
  </div>
</div>
