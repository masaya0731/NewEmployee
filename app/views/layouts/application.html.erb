<!DOCTYPE html>
<html>
  <head>
    <title>NewEmployee</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light mt-3">
        <div class="container">
          <%= link_to root_path, class:"navbar-brand text-white" do %>

          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
                <li><%= link_to 'マイページ', public_customer_path(current_customer.id), class:"nav-link"%></li>
                <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"nav-link" %></li>
              <% else %>
                <li><%= link_to 'About', about_path, class:"nav-link text-white" %></li>
                <li><%= link_to "新規登録", new_customer_registration_path, class:"nav-link text-white" %></li>
                <li><%= link_to "ログイン", new_customer_session_path, class:"nav-link text-white" %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
